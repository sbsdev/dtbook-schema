default namespace brl = "http://www.daisy.org/z3986/2009/braille/"

# =================
# Contraction hints
# =================

brl.contractionhint =
  brl.num
  | brl.homograph
  | brl.v-form
  | brl.name
  | brl.place
  | brl.date
  | brl.time
  | brl.emph

brl.num =
  element brl:num {
    attribute role {
      "ordinal"
      | "cardinal"
      | "roman"
      | "fraction"
      | "mixed"
      | "isbn"
      | "phone"
      | "measure" },
    text }

brl.homograph =
  element brl:homograph {
    element brl:separator { empty }+
    & text }

brl.v-form =
  element brl:v-form {
    xsd:normalizedString { minLength = "1" }}

brl.name =
  element brl:name {
    xsd:normalizedString { minLength = "1" }}

brl.place =
  element brl:place {
    xsd:normalizedString { minLength = "1" }}

brl.date =
  element brl:date {
    attribute value {
      xsd:gMonthDay
      | xsd:date },
    text }

brl.time =
  element brl:time {
    attribute value {
      xsd:time
      | xsd:string { pattern = "\d\d:\d\d" }},
    text }

brl.emph =
  element brl:emph {
    brl.emphasisClassAttribute?,
    brl.emphasisRenderAttribute?,
    attribute id { id.type }?,
    brl.continuationAttribute?,
    (text
     & dtb.pagenum?
     & brl.contractionhint*
     & dtb.abbr*) }

## The class attribute on emphasis is used to categorize the emphasis tags.
## This will help in deciding what brl:render attribute to set for this emphasis
brl.emphasisClassAttribute = attribute brl:class { string }
brl.emphasisRenderAttribute =
  attribute brl:render {
    "emph"
    | "quote"
    | "singlequote"
    | "ignore" }

# ===============================
# brl:toc-line / brl:running-line
# ===============================

brl.toc-line =
  element brl:toc-line {
    text
    & dtb.em*
    & dtb.strong*
    & brl.contractionhint*
    & dtb.abbr*
    & dtb.span* }

brl.running-line =
  element brl:running-line {
    brl.gradeAttribute?,
    (text
     & dtb.em*
     & dtb.strong*
     & brl.contractionhint*
     & dtb.abbr*
     & dtb.span*) }

# ================
# Volume splitting
# ================

brl.volume =
  element brl:volume {
    brl.gradeAttribute }

# ==========
# @brl:class
# ==========

## brl:class lets you fine tune the Braille formatting (think of it as a form of css for Braille)
brl.classAttribute &=
  attribute brl:class { string }

# =========================
# @brl:grade / @brl:accents
# =========================

brl.gradeAttribute &=
  attribute brl:grade {
    xsd:nonNegativeInteger {
      maxInclusive = "2" }}

brl.accentsAttribute &=
  attribute brl:accents {
    "detailed" | "reduced" }

# ========================
# brl:select / brl:literal
# ========================

brl.select =
  element brl:select {
    element brl:when-braille {
      text
      & brl.literal* },
    element brl:otherwise {
      text }}

brl.literal =
  element brl:literal {
    brl.gradeAttribute?,
    text }

